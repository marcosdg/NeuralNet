package test;

import core.Neuron;
import core.activation.Linear;
import core.propagation.WeightedSum;

public class Test {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		
		double slope = 2;
		Linear activation_function = new Linear(slope);
		
		WeightedSum input_function = new WeightedSum();
		
		Neuron neuron = new Neuron(input_function, activation_function, "Neuron 1");

		
		
		
		System.out.println("-- NEURON BEFORE COMPUTE INPUT --");
		
		System.out.println("Neuron net input: " + neuron.getNetInput());
		System.out.println("Neuron ouput: " + neuron.getOutput());
		System.out.println("Neuron error: " + neuron.getError());
		System.out.println("Neuron output derived: " + neuron.getOutputDerived());
		
		System.out.println("-- NEURON AFTER COMPUTE INPUT --");
		
	}

}
