package core.data;

import java.util.ArrayList;
import java.util.List;

public class Sample {
	
	private List<Double> input_vector;
	private List<Double> desired_output;

	
// Creation.
	
	
	public Sample() {
		this.input_vector = new ArrayList<Double>();
		this.desired_output = new ArrayList<Double>();
	}

	
// Input vector configuration.	
	
	
	public List<Double> getInputVector() {
		return input_vector;
	}
	public void setInputVector(List<Double> input_vector) {
		this.input_vector = input_vector;
	}
	public void addInput(String input) {
		this.input_vector.add(Double.parseDouble(input));
	}


// Desired output configuration.
	
	
	public List<Double> getDesiredOutput() {
		return desired_output;
	}
	public void setDesiredOutput(List<Double> desired_output) {
		this.desired_output = desired_output;
	}
	public void addOutput(String output) {
		this.desired_output.add(Double.parseDouble(output));
	}
}
